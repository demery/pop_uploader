<% if evidence? -%>
<b><%= identified? ? "Identified" : "Unidentified" %></b>
<% end -%>
<% if evidence? -%>

<b>EVIDENCE</b>
<b>Provenance evidence</b>: <%= evidence_summary %>
<% if present?(evidence_location_in_book) -%>
<b>Location in book</b>: <%= evidence_location_in_book %>
<% end -%>
<% if present?(evidence_transcription) -%>
<b>Transcription</b>: <%= evidence_transcription %>
<% end -%>
<% if present?(associated_names) -%>
<b>Associated name(s)</b>: <%= associated_names %>
<% end -%>
<% if present?(associated_dates) -%>
<b>Associated date(s)</b>: <%= associated_dates %>
<% end -%>
<% if present?(associated_places) -%>
<b>Associated place(s)</b>: <%= associated_places %>
<% end -%>
<% end -%>
<% if identified? -%>

<b>IDENTIFICATION</b>
<% identifications.each do |id| -%>
<b>Identified</b>: <%= id %>
<% end -%>
<% if present?(id_date) -%>
<b>Identified date(s)</b>: <%= id_date %>
<% end -%>
<% if present?(id_place) -%>
<b>Identified place(s)</b>: <%= id_place %>
<% end -%><%# Add a blank line only if identified  -%>
<% end -%>

<b>COPY</b>
<b>Repository</b>: <%= copy_current_repository %>
<b>Call number</b>: <a href="<%= url_to_catalog %>"><%= copy_call_number %></a>
<% if present?(copy_current_collection) -%>
<b>Collection</b>: <%= copy_current_collection %>
<% end -%>
<b>Copy title</b>: <%= copy_title %>
<% if present?(authors) -%>
<b>Author(s)</b>: <%= authors %>
<% end -%>
<% if present?(published) -%>
<b>Published</b>: <%= published %>
<% end -%>
<% if present?(copy_printer_publisher) -%>
<b>Printer/Publisher</b>: <%= copy_printer_publisher %>
<% end -%>
<a href="<%= same_book_url %>">All images from this book</a>
<% if present?(evidence_comments) -%>

<b>COMMENT</b>
<%= evidence_comments %>
<% end -%>
<% if present?(evidence_citation) -%>

<b>CITATION</b>
<%= evidence_citation %>
<% end -%>

<b>FIND IN POP</b>
<% tag_values.each do |tag| -%>
  <a href="<%= tag_url tag %>"><%= tag %></a>
<% end -%>
